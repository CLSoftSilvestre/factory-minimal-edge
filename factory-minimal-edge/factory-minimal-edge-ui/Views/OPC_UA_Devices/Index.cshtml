@model IEnumerable<factory_minimal_edge_models.OPC_UA_Device>

@{
    ViewData["Title"] = "Index";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">OPC UA servers page</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Connections</a></li>
                <li class="breadcrumb-item active">OPC UA Servers</li>
            </ol>
        </div>
    </div>
</div>

<p>
    <a type="button" class="btn btn-primary" style="margin:10px" asp-action="Create"><i class="fa fa-plus"></i> Create new OPC UA connection</a>
</p>

<table class="table table-responsive-md">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endpoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endpoint)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Action commands">
                        <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <a type="button" class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
